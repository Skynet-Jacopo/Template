<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.administrator.template.GridView.GridViewActivity">

    <LinearLayout
        android:background="#cfc5c5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="切换栏目"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    </LinearLayout>
    
    <com.example.administrator.template.fixed.FixedGridView
        android:layout_width="match_parent"
        android:id="@+id/gv_list"
        android:numColumns="4"
        android:layout_height="wrap_content">

    </com.example.administrator.template.fixed.FixedGridView>

    <LinearLayout
        android:background="#cfc5c5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="点击添加更多栏目"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    </LinearLayout>

    <com.example.administrator.template.fixed.FixedGridView
        android:layout_width="match_parent"
        android:id="@+id/gv_more_list"
        android:numColumns="4"
        android:layout_height="wrap_content">

    </com.example.administrator.template.fixed.FixedGridView>
</LinearLayout>
